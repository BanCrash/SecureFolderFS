<UserControl
    x:Class="SecureFolderFS.WinUI.UserControls.InterfaceHost.NoVaultsAppHostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.UserControls.InterfaceHost"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        RowSpacing="40">
        <Grid.RowDefinitions>
            <!--  Title  -->
            <RowDefinition />
            <!--  Continue button  -->
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="3">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="22"
                FontWeight="SemiBold"
                Text="Welcome to SecureFolderFS" />
            <TextBlock
                HorizontalAlignment="Center"
                Opacity="0.8"
                Text="You haven't added any vaults yet. Let's start making your files more secure." />
        </StackPanel>

        <Button
            Grid.Row="1"
            HorizontalAlignment="Center"
            Content="Get started"
            Command="{x:Bind ViewModel.AddNewVaultCommand}"
            Style="{ThemeResource AccentButtonStyle}" />
    </Grid>
</UserControl>
